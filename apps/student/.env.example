NODE_ENV=development # development or production

# Firebaseエミュレータを使用する設定
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false

# Firebase Admin SDK (サーバーサイド用)
# Firebase Consoleのプロジェクト設定 → サービスアカウント → 秘密鍵を生成 から取得
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Firebase Client SDK (クライアントサイド用)
# Firebase Consoleのプロジェクト設定 → 全般 → マイアプリ から取得
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
# セッション管理
# セッションCookieの名前（必須）
SESSION_COOKIE_NAME=__session
# セッションCookieの有効期限（日数、必須）
SESSION_COOKIE_MAX_AGE_DAYS=5

# 認証・ユーザー管理
# 学生メールアドレスのパターン（正規表現、必須）
# 例: ^g\\d{5}@ktc\\.ac\\.jp$ (gXXXXX@ktc.ac.jp の形式)
# 開発環境と本番環境で異なるドメインを使う場合は変更してください
STUDENT_EMAIL_PATTERN=^g\\d{5}@ktc\\.ac\\.jp$

# メール通知設定
# Gmail SMTP設定（必須）
# Gmailアプリパスワードを使用してください（通常のパスワードではありません）
# 設定方法: Googleアカウント → セキュリティ → 2段階認証 → アプリパスワード
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 通知送信先メールアドレス（必須）
# 先生側のメールアドレスを設定してください
NOTIFICATION_RECIPIENT_EMAIL=teacher@example.com

# アプリケーションのベースURL（オプション）
# 本番環境では実際のURLを設定してください
# 開発環境ではデフォルトで http://localhost:3003 が使用されます
NEXT_PUBLIC_BASE_URL=http://localhost:3003
